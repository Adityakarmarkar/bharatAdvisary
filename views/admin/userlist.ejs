<div class="wrapper">
  <%- partial ('partials/header.ejs') %>
  <%- partial ('partials/aside.ejs') %>

  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Dashboard
        <small>Control panel</small>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">User List</h3>
            </div>
            <div class="box-body">
              <table class="table table-bordered table-striped tablesort">
                <thead>
                <tr>
                  <th>#</th>
                  <th>User Name</th>
                  <th>Mobile No.</th>
                  <th>City</th>
                  <th>Mac</th>
                  <th>status</th>
                  <th>Created At</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                  <%if(data.users && data.users.length){%>
                    <%_.each(data.users, function (val, index) {%>
                      <tr>
                        <td><%=index+1%></td>
                        <td><%=((val.userName) ? val.userName : '')%></td>
                        <td><%=((val.mobile) ? val.mobile : '')%></td>
                        <td><%=((val.city) ? val.city : '')%></td>
                        <td><%=((val.macAddress) ? val.macAddress : '')%></td>
                        <td><%=((val.status) ? val.status : '')%></td>
                        <td><%=((moment && val.createdAt) ? moment(val.createdAt).format('DD-MMM-YYYY') : '')%></td>
                        <td><button type="button" id="suspende" class="btn btn-xs btn-danger" data-toggle="tooltip" title="Suspende User" ><i class="fa fa-user-times"></i></button></td>
                      </tr>
                    <%})%>
                  <%}%>
                </tbody>
                <tfoot>
                <tr>
                  <th>#</th>
                  <th>User Name</th>
                  <th>Mobile No.</th>
                  <th>City</th>
                  <th>Mac</th>
                  <th>status</th>
                  <th>Created At</th>
                  <th>Action</th>
                </tr>
                </tfoot>
              </table>
            </div>
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
  </div>

  <%- partial ('partials/footer.ejs') %>
  <div class="control-sidebar-bg"></div>
</div>
